<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/" permissive="true">
  <Geometry nx="128" ny="32">
    <MRT>
      <Box />
    </MRT>
    <WVelocity name="Inlet">
      <Inlet />
    </WVelocity>
    <EPressure name="Outlet">
      <Outlet />
    </EPressure>
    <Inlet nx="1" dx="1">
      <Box />
    </Inlet>
    <Outlet nx="1" dx="-1">
      <Box />
    </Outlet>
  </Geometry>
  <RunR>
    library(png);
    tab = readPNG("example/data/128x32.png"); 
		Solver$Fields$Height [] = t(10+10*tab[,,1]);

    Solver$Actions$Init();
  </RunR>
  <Model>
    <Param name="VelocityX" value="0.0" />
    <Param name="VelocityX" value="0.1" zone="Inlet" />
    <Param name="Pressure" value="0.01" />
    <Param name="C_saturation" value="1.0" />
    <Param name="Concentration" value="0.0" />
    <Param name="Inlet_concentration" value="0.0" />
    <Param name="k" value="1e-6" />
  </Model>
  <HDF5 />
  <Solve Iterations="1e8">
    <HDF5 Iterations="1e5"/>
  </Solve>
</CLBConfig>
<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/" permissive="true">
  <Geometry nx="1024" ny="256">
    <MRT>
      <Box />
    </MRT>
    <WVelocity name="Inlet">
      <Inlet />
    </WVelocity>
    <EPressure name="Outlet">
      <Outlet />
    </EPressure>
    <Inlet nx="1" dx="5">
      <Box />
    </Inlet>
    <Outlet nx="1" dx="-5">
      <Box />
    </Outlet>
  </Geometry>
  <RunR>
    library(png);
    tab = readPNG("example/data/1024x256_initial_hz.png"); 
		Solver$Fields$Height [] = t(1+tab[,,1]/10.);

    Solver$Actions$InitFromFields();
  </RunR>
  <Model>
    <Param name="VelocityX" value="0.001" />
    <Param name="C_saturation" value="1.0" />
    <Param name="Concentration" value="0.0" />
    <Param name="Inlet_concentration" value="0.0" />
    <Param name="k" value="1e-8" />
  </Model>
  <VTK Iterations="1e2" what="C,Rho,U" />
  <Solve Iterations="1e4" />
</CLBConfig>